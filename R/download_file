# Function to download a file from a URL to a destination
download_data <- function(url, destination) {
  tryCatch({
    # Create directory for the file if necessary
    create_directory(dirname(destination))
    
    # Download the file
    download.file(url, destination)
    message("File downloaded successfully to ", destination)
    return(TRUE)
  }, error = function(e) {
    message("Error downloading the file: ", e$message)
    return(FALSE)
  })
}

